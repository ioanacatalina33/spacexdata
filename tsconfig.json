{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "esnext"],
    "jsx": "react-jsx", // Use the new JSX Transform (React 17+)
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "src", // Set the base directory to 'src'
    "paths": {
      "*": ["*"]
    }
  },
  "include": ["src"], // ["src/**/*.ts", "src/**/*.tsx"]
  "exclude": ["node_modules"]
}
